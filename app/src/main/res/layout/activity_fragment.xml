<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!-- TODO 20 add smallestScreen XML (600dp)
    and make sure ur IDs in both same name files match -->

    <FrameLayout
            android:id="@+id/main_fragment_holder_view"
            android:layout_width="0dp"
            android:layout_weight= "2"
            android:layout_height="match_parent">
        <fragment
                android:id="@+id/first_fragment"
                android:name="com.lambdaschool.congressfragmentsproject.CongresspersonOverviewFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        </fragment>

    </FrameLayout>
    <FrameLayout
            android:id="@+id/second_fragment_holder_view"
            android:layout_width="0dp"
            android:layout_weight= "1"
            android:layout_height="match_parent">
        <fragment
                android:id="@+id/second_fragment"
                android:name="com.lambdaschool.congressfragmentsproject.DetailFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        </fragment>

    </FrameLayout>


</LinearLayout>